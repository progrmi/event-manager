<%- include('../partials/header') %>
<div class="container">
  <h1>Upcoming Events</h1>
  <% if (events.length > 0) { %>
  <ul class="event-list">
    <% events.forEach(event => { %>
    <li class="event-card">
      <h2><%= event.title %></h2>
      <p>
        <strong>Date:</strong> <%= new
        Date(event.event_date).toLocaleDateString() %>
      </p>
      <p><strong>Location:</strong> <%= event.location %></p>
      <a href="/events/<%= event.id %>" class="btn">View Details</a>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p>No events found. Why not <a href="/events/create">create one</a>?</p>
  <% } %>
</div>
<%- include('../partials/footer') %>
