<%- include('./partials/header') %>

  <div class="auth-container">
    <h2>Welcome Back</h2>
    <p class="auth-subtitle">Sign in to your account to continue</p>
    
    <% if (message) { %>
      <div class="alert <%= message.type === 'error' ? 'alert-danger' : 'alert-success' %>">
        <%= message.text %>
      </div>
    <% } %>
    
    <form action="/auth/login" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          value="<%= formData && formData.email ? formData.email : '' %>" 
          required 
          autofocus
          placeholder="Enter your email"
        >
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required
          placeholder="Enter your password"
        >
      </div>
      
      <button type="submit">Sign In</button>
    </form>
    
    <div class="auth-link">
      <p>Don't have an account? <a href="/auth/register">Create one here</a></p>
    </div>
  </div>
<%- include('./partials/footer') %>