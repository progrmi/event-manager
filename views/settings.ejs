<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <div class="container">
      <div class="header organiser">
        <h1>Site Settings</h1>
        <p>Manage global settings for the application.</p>
      </div>

      <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-<%= message.type %>" style="margin-top: 2rem">
        <%= message.text %>
      </div>
      <% } %>

      <div class="form-section" style="margin-top: 2rem">
        <h2>General Settings</h2>
        <form action="/settings/update" method="POST">
          <div class="form-group">
            <label for="site_name">Site Name</label>
            <input
              type="text"
              id="site_name"
              name="site_name"
              value="<%= siteSettings.site_name %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="welcome_title">Homepage Welcome Title</label>
            <input
              type="text"
              id="welcome_title"
              name="welcome_title"
              value="<%= siteSettings.welcome_title %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="welcome_subtitle">Homepage Welcome Subtitle</label>
            <textarea id="welcome_subtitle" name="welcome_subtitle" rows="3">
<%= siteSettings.welcome_subtitle %></textarea
            >
          </div>
          <div class="form-group">
            <label for="footer_bio">Footer Bio</label>
            <textarea id="footer_bio" name="footer_bio" rows="3">
<%= siteSettings.footer_bio %></textarea
            >
          </div>
          <div class="form-group">
            <label for="email">Contact Email</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= siteSettings.email %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="phone">Contact Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              value="<%= siteSettings.phone %>"
              required
            />
          </div>
          <button type="submit" class="btn organiser">Save Settings</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %> <%- include('partials/scripts') %>
  </body>
</html>
