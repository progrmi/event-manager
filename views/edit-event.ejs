<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <!-- prettier-ignore -->
    <%- include('partials/header', { pageClass: 'organiser', headerTitle: 'üé´ Event Manager - Edit Event', headerSubtitle: 'Your Complete Event Management Solution' }) %>
    <div class="container">
      <div class="header organiser">
        <div class="header-controls">
          <a href="/organiser" class="logout-btn">‚Üê Back to Dashboard</a>
        </div>
        <h1>Edit Event</h1>
        <p>Update details for: <strong><%= event.title %></strong></p>
      </div>

      <div class="form-section">
        <form action="/organiser/update/<%= event.id %>" method="POST">
          <div class="form-grid">
            <div class="form-group">
              <label for="title">Event Title:</label>
              <input
                type="text"
                id="title"
                name="title"
                value="<%= event.title %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="location">Location:</label>
              <input
                type="text"
                id="location"
                name="location"
                value="<%= event.location %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="date">Date:</label>
              <input
                type="date"
                id="date"
                name="date"
                value="<%= event.date %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="time">Time:</label>
              <input
                type="time"
                id="time"
                name="time"
                value="<%= event.time %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="max_attendees">Maximum Attendees:</label>
              <input
                type="number"
                id="max_attendees"
                name="max_attendees"
                value="<%= event.max_attendees %>"
                min="1"
                required
              />
            </div>

            <div class="form-group full-width">
              <label for="description">Description:</label>
              <textarea
                id="description"
                name="description"
                placeholder="Optional event description..."
              >
<%= event.description %></textarea
              >
            </div>
          </div>

          <button type="submit" class="btn organiser">Update Event</button>
        </form>
      </div>
    </div>
    <%- include('partials/footer') %> <%- include('partials/scripts') %>
  </body>
</html>
